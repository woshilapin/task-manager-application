            &lt;/th&gt;
            &lt;td&gt;
              &lt;select form="task-modify" id="TaskCode.TaskClass_0_priority" name="TaskCode.TaskClass_0_priority"&gt;
                #foreach($priority_choice from $taskClass.get('priority').getListValues())
                  #set($priority_l10n_id = 'TaskCode.PriorityClass_name_' + $priority_choice)
                  #set($priority_l10n = $services.localization.render($priority_l10n_id))
                  #if($priority_choice == $task_priority)
                    &lt;option value="$priority_choice" selected&gt;$priority_l10n&lt;/option&gt;
                  #else
                    &lt;option value="$priority_choice"&gt;$priority_l10n&lt;/option&gt;
                  #end
                #end
              &lt;/select&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_assignee"&gt;$taskClass.get('assignee').getPrettyName()&lt;/label&gt;
              &lt;label form="task-modify" for="TaskCode.TaskClass_0_assignee"&gt;$services.localization.render('TaskCode.TaskClass_assignee')&lt;/label&gt;
            &lt;/th&gt;
            &lt;td&gt;
              &lt;input form="task-modify" type="text" id="TaskCode.TaskClass_0_assignee" name="TaskCode.TaskClass_0_assignee" value="$!task_assignee" class="suggestUsers" /&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
        &lt;/table&gt;
        &lt;input type="submit" form="task-modify" class="button" value="$services.localization.render('Tasks.TaskEdit.save_modifications')" /&gt;
      &lt;/form&gt;
    {{/html}}

#elseif($task_is_save == true)
  #set($task_title = '[#' + $task_id + '] ' + $task_name)
  #set($task_document_name = 'Tasks.' + $task_id + '-' + $task_name)
  #set($task_document = $xwiki.getDocument($task_document_name))
  #set($task = $task_document.getObject('TaskCode.TaskClass', true))
  $task.set('id'         , $task_id)
  $task.set('name'       , $task_name)
  $task.set('description', $task_description)
  $task.set('duedate'    , $task_duedate)
  $task.set('status'     , $task_status)
  $task.set('priority'   , $task_priority)
  $task.set('reporter'   , $task_reporter)
  $task.set('assignee'   , $task_assignee)
  $task_document.setTitle($task_title)
  $task_document.setParent('Tasks.WebHome')
  $task_document.save()
  $response.sendRedirect($xwiki.getURL($task_document))
#end
