#set($task_assignee    = $!request.getParameter('TaskCode.TaskClass_0_assignee'))

#if($request.getParameter('TaskCode.TaskClass_is_new') == 'true')
  #set($task_is_new = true)
#end
#if($request.getParameter('TaskCode.TaskClass_is_edit') == 'true')
  #set($task_is_edit = true)
#end
#if($task_id == '' || $task_name == '' || $task_status == '' || $task_priority == '')
  #set($task_is_incomplete = true)
  {{warning}}{{translation key="Tasks.TaskEdit.name_is_mandatory" /}}{{/warning}}
#end
#if($request.getParameter('TaskCode.TaskClass_is_save') == 'true')
  #set($task_is_save = true)
#end
#set($taskClass = $xwiki.getClass('TaskCode.TaskClass'))

#if($task_is_new == true || $task_is_edit == true || $task_is_incomplete == true)

    {{html wiki="true"}}
      &lt;form id="task-modify" method="POST" action="$xwiki.getURL('TaskCode.TaskEdit')"&gt;
        &lt;input type="hidden" name="TaskCode.TaskClass_is_new" value="false" /&gt;
        &lt;input type="hidden" name="TaskCode.TaskClass_is_edit" value="false" /&gt;
        &lt;input type="hidden" name="TaskCode.TaskClass_is_save" value="true" /&gt;
        &lt;input type="hidden" name="TaskCode.TaskClass_0_id" value="$task_id" /&gt;
        &lt;input type="hidden" name="TaskCode.TaskClass_0_reporter" value="$task_reporter" /&gt;
        &lt;table&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_name" width="100%"&gt;$taskClass.get('name').getPrettyName()&lt;/label&gt;
              &lt;label form="task-modify" for="TaskCode.TaskClass_0_name" width="100%"&gt;$services.localization.render('TaskCode.TaskClass_name')&lt;/label&gt;
            &lt;/th&gt;
            &lt;td&gt;
              &lt;input form="task-modify" id="TaskCode.TaskClass_0_name" name="TaskCode.TaskClass_0_name" type="text" value="$!task_name" /&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_description"&gt;$taskClass.get('description').getPrettyName()&lt;/label&gt;
              &lt;label form="task-modify" for="TaskCode.TaskClass_0_description"&gt;$services.localization.render('TaskCode.TaskClass_description')&lt;/label&gt;
            &lt;/th&gt;
            &lt;td&gt;
              &lt;textarea form="task-modify" id="TaskCode.TaskClass_0_description" name="TaskCode.TaskClass_0_description" cols="100%" rows="5"&gt;$!task_description&lt;/textarea&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_duedate"&gt;$taskClass.get('duedate').getPrettyName()&lt;/label&gt;
              &lt;label form="task-modify" for="TaskCode.TaskClass_0_duedate"&gt;$services.localization.render('TaskCode.TaskClass_duedate')&lt;/label&gt;
            &lt;/th&gt;
            &lt;td&gt;
              &lt;input form="task-modify" id="TaskCode.TaskClass_0_duedate" name="TaskCode.TaskClass_0_duedate" class="datetime" type="text" value="$!task_duedate" title="dd/MM/yyyy HH:mm" /&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_status"&gt;$taskClass.get('status').getPrettyName()&lt;/label&gt;
              &lt;label form="task-modify" for="TaskCode.TaskClass_0_status"&gt;$services.localization.render('TaskCode.TaskClass_status')&lt;/label&gt;
            &lt;/th&gt;
            &lt;td&gt;
              &lt;select form="task-modify" id="TaskCode.TaskClass_0_status" name="TaskCode.TaskClass_0_status"&gt;
                #foreach($status_choice from $taskClass.get('status').getListValues())
                  #set($status_l10n_id = 'TaskCode.StatusClass_name_' + $status_choice)
                  #set($status_l10n = $services.localization.render($status_l10n_id))
                  #if($status_choice == $task_status)
                    &lt;option value="$status_choice" selected&gt;$status_l10n&lt;/option&gt;
                  #else
                    &lt;option value="$status_choice"&gt;$status_l10n&lt;/option&gt;
                  #end
                #end
              &lt;/select&gt;
            &lt;/td&gt;
          &lt;/tr&gt;
          &lt;tr&gt;
            &lt;th&gt;
              ## Broken since getPrettyName() is not managed for localization
              ## &lt;label form="task-modify" for="TaskCode.TaskClass_0_priority"&gt;$taskClass.get('priority').getPrettyName()&lt;/label&gt;
