{{html wiki=true}}
#if($type == 'edit')
  #set($query = "from doc.object(TaskCode.TaskClass) as task where doc.fullName &lt;&gt; 'TaskCode.TaskTemplate' and doc.fullName &lt;&gt; '$doc.fullName' order by task.duedate")
  #set($results = $services.query.xwql($query).execute())
  #foreach($taskid in $results)
    #set($taskpageref = $services.model.resolveDocument($taskid))
    #set($taskpage = $xwiki.getDocument($taskpageref))
    #set($task = $taskpage.getObject('TaskCode.TaskClass'))
    #set($tasktitle = $task.getProperty('title').value)
    #set($tasklink = $task.getName())
    #set($taskstatus = $task.getProperty('status').value)
    #set($taskduedate = $task.display('duedate', 'view'))
    &lt;label class="xwiki-form-listclass" for="xwiki-form-dependencies-0-$foreach.index"&gt;
      &lt;input
        id="xwiki-form-dependencies-0-$foreach.index"
        value="$taskid"
        #foreach($dependency in $value)
          #if($dependency == $taskid)
            checked
          #end
        #end
        name="TaskCode.TaskClass_0_dependencies"
        type="checkbox"/&gt;
      [$services.localization.render("TaskCode.TaskClass_status_$taskstatus")]
      [[$tasktitle&gt;&gt;$tasklink]]
      ($services.localization.render('Tasks.WebHome.due_date_on') $taskduedate)
    &lt;/label&gt;
  #end
#else
  #foreach($taskid in $value)
    #set($taskpageref = $services.model.resolveDocument($taskid))
    #set($taskpage = $xwiki.getDocument($taskpageref))
    #set($task = $taskpage.getObject('TaskCode.TaskClass'))
    #set($tasktitle = $task.getProperty('title').value)
    #set($tasklink = $task.getName())
    #set($taskstatus = $task.getProperty('status').value)
    #set($taskduedate = $task.display('duedate', 'view'))
    * [$services.localization.render("TaskCode.TaskClass_status_$taskstatus")]
      [[$tasktitle&gt;&gt;$tasklink]]
      ($services.localization.render('Tasks.WebHome.due_date_on') $taskduedate)&lt;br /&gt;
  #end
#end
{{/html}}

